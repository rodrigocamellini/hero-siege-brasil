  "scripts": {
    "start": "react-scripts start",
    "prebuild": "node scripts/generate-sitemap.mjs",
    "build": "react-scripts build",
    "build:dist": "npm run build && node -e \"const fs=require('fs');const path=require('path');const src='build';const dst='dist';try{fs.rmSync(dst,{recursive:true,force:true});}catch{};fs.cpSync(src,dst,{recursive:true});const ht='public/.htaccess';if(fs.existsSync(ht)){fs.copyFileSync(ht,path.join(dst,'.htaccess'));console.log('Copied .htaccess -> dist/.htaccess');}else{console.log('.htaccess not found in public/, skipped');}console.log('Copied build -> dist');\"",
    "preview:dist": "npx serve -s dist -l 5001",
    "sitemap": "node scripts/generate-sitemap.mjs",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
